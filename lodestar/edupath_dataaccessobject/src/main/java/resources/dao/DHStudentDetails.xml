<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DHStudentDetails">


		<parameterMap id="paramMap" type="com.lodestar.edupath.datatransferobject.dto.APIS.dailyHunt.DHStudentDetailsDTO"></parameterMap>
	<resultMap id="SelectAllResult" type="com.lodestar.edupath.datatransferobject.dto.APIS.dailyHunt.DHStudentDetailsDTO"></resultMap>
	<resultMap type="com.lodestar.edupath.datatransferobject.dto.APIS.dailyHunt.DHStudentDetailsDTO" id="SummaryResult">
		<id property="id" column="id" />
		<id property="DHID" column="DHID" />
		<id property="name" column="name" />
		<id property="cityId" column="cityId" />
		<id property="classStr" column="className" />
		<id property="schoolName" column="school" />
		<id property="contactNumber" column="contactNumber" />
		<id property="fathername" column="fathername" />
		<id property="fatheremailId" column="fatheremailId" />
		<id property="section" column="section" />
		<id property="gender" column="gender" />
		<id property="stream" column="stream" />
		<id property="aptitudeComplete" column="aptitudeComplete" />	
		
	</resultMap>
	
	<insert id="insertStudentDetail" parameterMap="paramMap" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO DHStudentDetails (name, DHID, cityId, className, school, contactNumber, fathername, fatheremailId, gender,stream)
		VALUES (#{name}, #{DHID}, #{cityId}, #{classStr}, #{schoolName}, #{contactNumber}, #{fathername}, #{fatheremailId},  #{gender},#{stream}  )
	</insert>
	
	
	<select id="getDHStudentByDHID" parameterMap="paramMap" resultMap="SummaryResult"> 
	  SELECT * from DHStudentDetails where DHID like #{DHID}
	 </select>
	 
	 <select id="getDHStudentByID" parameterMap="paramMap" resultMap="SummaryResult"> 
	  SELECT * from DHStudentDetails where id = #{id}
	 </select>
	
	 <select id="getDHStudentAptitudeByDHID" parameterMap="paramMap" resultMap="SummaryResult"> 
	  SELECT * from DHStudentDetails where id = #{id}
	 </select>
	 
	 <update id="updateDHStudentType" parameterMap="paramMap">
		UPDATE DHStudentDetails 
		SET studentType = #{studentType}
		WHERE id = #{id}
	</update> 
	 
</mapper>
